
{{# if products}}
<div class="row">

  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <ul class="list-group">
       <h3 style="float: middle"> Your Cart </h3>
      {{# each products}}
      <li class="list-group-item">
        
        <strong>{{this.item.title}}   </strong>
        <strong>(Rs. {{this.price}})</strong>
          <div class="btn-group" style="float: right;">
            <span class="badge">{{this.qty}}</span>
            <a href="/reduce/{{this.item._id}}">Remove</a>
          </div>
      </li>
      {{/each}}
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3" >
    <strong style="float: right">Total:{{totalPrice}}</strong>
  </div>
</div>
<hr />
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <a href="/checkout" type="button" class="btn btn-success" style="float: right">Pay</a>
  </div>
</div>

{{else}}
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <h2>No items in cart</h2>
  </div>
</div>
{{/if}}
